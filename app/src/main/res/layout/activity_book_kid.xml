<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookKidActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentKidBook"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFairy"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FF9BE3"
        android:text="Fairy"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentKidBook" />

    <Button
        android:id="@+id/buttonFable"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#68FFF6"
        android:text="Fable"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/buttonFairy"
        app:layout_constraintTop_toBottomOf="@+id/fragmentKidBook" />

    <Button
        android:id="@+id/buttonScience"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FFE484"
        android:text="Science"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/buttonFable"
        app:layout_constraintTop_toBottomOf="@+id/fragmentKidBook" />


</androidx.constraintlayout.widget.ConstraintLayout>